<div class="pull-right">
  <%= link_to("Add product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

  <table class="table table-boldered">
      <thead>
        <tr>
          <td>名称</td>
          <td>细节</td>
          <td>价格</td>
          <td>库存</td>
          <td>图片</td>
          <td>操作</td>
          <td>上架时间</td>
        </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to(product.title, admin_product_path(product)) %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= product.quantity %>
          </td>
          <td>
            <img src="<%= product.image.thumb %>">
          </td>
          <td>
            <%= link_to("Edit", edit_admin_product_path(product)) %>
            <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
          </td>
          <td>
            <%= product.created_at %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
