<div class="pull-right">
  <%= link_to("Add product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<br><br>

  <table class="table table-boldered">
      <thead>
        <tr>
          <td>title</td>
          <td>description</td>
          <td>price</td>
          <td>quantity</td>
          <td>Choice</td>
          <td>Time</td>
        </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to(product.title, admin_product_path(product)) %>
          </td>
          <td>
            <%= link_to(product.description, admin_product_path(product)) %>
          </td>
          <td>
            <%= link_to(product.price, admin_product_path(product)) %>
          </td>
          <td>
            <%= link_to(product.quantity, admin_product_path(product)) %>
          </td>

          <td>
            <%= link_to("Edit", edit_admin_product_path(product)) %>
            <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
          </td>
          <td>
            <%= product.created_at %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
