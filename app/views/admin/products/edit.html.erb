<h1> Edit a product </h1>

<%= simple_form_for [:admin, @product ] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :quantity %>
<%= f.input :price %>
<div class="text-center">
  <%= link_to("上传图片", "#", :style => "font-size: 30px; text-decoration:underline;") %>
</div>

  <%= f.submit "Submit" %>
<% end %>
