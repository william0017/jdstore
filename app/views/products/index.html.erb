<h1> 产品预览 </h1>

<table class="table table-boldered">
    <thead>
      <tr>
        <td>title</td>
        <td>description</td>
        <td>price</td>
        <td>quantity</td>
        <td>Time</td>
      </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to(product.title, product_path(product)) %>
        </td>
        <td>
          <%= product.description %>
        </td>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.quantity %>
        </td>
        <td>
          <%= product.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
